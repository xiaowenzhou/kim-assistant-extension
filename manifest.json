{
  "manifest_version": 3,
  "name": "Kim Assistant",
  "version": "1.0.0",
  "description": "Your AI assistant Kim - chat with me anytime while browsing",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "assets/icons/16icon.png",
    "32": "assets/icons/32icon.png",
    "48": "assets/icons/48icon.png",
    "128": "assets/icons/128icon.png"
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.js"],
      "css": ["src/content/styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "assets/icons/16icon.png",
      "32": "assets/icons/32icon.png"
    }
  },
  "options_page": "src/options/index.html"
}
